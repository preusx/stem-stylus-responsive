@media (max-width:719px) and (min-width:320px){body{some:1px}}
@media (max-width:1919px) and (min-width:120px){body{some:1px}}
@media (max-width:1919px) and (min-width:320px){body{some:1px}}

// @it Above(from)

+above(xs)
    body
        some 1px

+above(120em)
    body
        some 1px

+above(120px)
    body
        some 1px

// @expects


@media (min-width:320px){body{some:1px}}
@media (min-width:120em){body{some:1px}}
@media (min-width:120px){body{some:1px}}


// @it Below(to)

+below(xs)
    body
        some 1px

+below(120em)
    body
        some 1px

+below(120px)
    body
        some 1px

// @expects


@media (max-width:319px){body{some:1px}}
@media (max-width:1919px){body{some:1px}}
@media (max-width:119px){body{some:1px}}


// @it Orientation

+below(xs, o:portrait)
    body
        some 1px

// @expects


@media (max-width:319px) and (orientation:portrait) {body{some:1px}}


// @it Density

+below(xs, d:1.3)
    body
        some 1px

+below(xs, d:retina)
    body
        some 1px

// @expects

@media (max-width:319px) and (-webkit-min-device-pixel-ratio:1.3) and (min--moz-device-pixel-ratio:1.3) and (-o-min-device-pixel-ratio:1.3/1) and (min-device-pixel-ratio:1.3) and (min-resolution:125dpi){body{some:1px}}
@media (max-width:319px) and (-webkit-min-device-pixel-ratio:1.5) and (min--moz-device-pixel-ratio:1.5) and (-o-min-device-pixel-ratio:1.5/1) and (min-device-pixel-ratio:1.5) and (min-resolution:144dpi){body{some:1px}}


// @it Nobreakpoint

+below(nobreakpoint)
    body
        some 1px

// @expects
body{some:1px}


// @it Only screen

+below(os:true)
    body
        some 1px

// @expects
@media only screen{body{some:1px}}


